  .menu .submenu li {
    float: none;
    height: 40px;
    line-height: 40px;
    display: block;
    width: 100%;
  }

  .menu .submenu li a {
    white-space:nowrap;
    margin-left: 10px;
    margin-right: 10px;
  }

  .menu li {
    position: relative;
  }

  .menu .submenu {
    z-index:999;
    display: none;
    position: absolute;
    padding: 0;
    background-color: #a40008;
    min-width: 100px;
    text-align: center;
    color: #fff;
    top: 100%;
    left: 50%;
    transform: translate(-50%, 0);
  }


  .menu .submenu li:hover {
    background-color: #CF3139;
  }

  .menu li:hover ul {
    display: block;
  }

</style>
