<% content_for :css do %>
  <%= stylesheet_link_tag    'activities', media: 'all' %>
<% end %>
<% content_for :js do %>
  <%= javascript_include_tag 'activities' %>
<% end %>
<!-- 记得这里是span不能换行 -->
<div class="breadcrumb container">
  <span><%= link_to 'Home', root_url %></span><span><%= link_to 'Activity', activities_url %></span><span><%= @activity.title %></span>
</div>

<!-- title -->
<h1 class="container"><%= @activity.title %></h1>

<!-- content -->
<div class="container">
  <article>
    <%= @activity.content.html_safe %>
  </article>
</div>
