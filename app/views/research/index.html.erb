<% content_for :css do %>
<%= stylesheet_link_tag    'research', media: 'all' %>
<% end %>
<% content_for :js do %>
<%= javascript_include_tag 'research' %>
<% end %>
<!-- 记得这里是span不能换行 -->
<div class="breadcrumb container">
  <% if params[:q] %>
    <span><%= link_to 'Home', root_url %></span><span><%= link_to 'Research', research_index_url %></span><span><%= params[:q] %></span>
  <% else %>
    <span><%= link_to 'Home', root_url %></span><span>Research</span>
  <% end %>
</div>

<!-- title -->
<h1 class="container">Research</h1>

<!-- content -->
<div class="container with-catalog">
  <article>

    <div class="event">
      <div class="image">
        <img src="http://project.isekai.me/ping/s1.jpeg" alt="">
      </div>
      <div class="info">
        <div class="time">February 9, 2018</div>
        <div class="desc">Operations Research Center Seminars: Combinatorial Optimization with a Probabilistic Objective</div>
        <div>test</div>
      </div>
    </div>

    <!-- pagination -->
    <!-- pagination end -->

  </article>

  <div class="catalog" style="height: 100%;">
    <span>Search the Complete Research </span><br>
    <span>Highlights:</span><br>
    <span>Enter a keyword, topic, or research term to search:</span><br>
    <div style="margin-top:0.1rem">
      <!-- <input type="text"><button style="">go</button> -->
    <%= form_tag research_index_url, :method => 'get' do %>
        <%= text_field_tag(:q, params[:q]) %>
        <%= submit_tag "go", :style => 'margin-left:0.07rem;background-color:#A40008;color: #FFFFFF;border:#A40008;height:0.28rem;padding-top:0;padding-bottom:0' %>
    <% end %>
    </div>
  </div>
</div>
