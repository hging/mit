<% content_for :css do %>
<%= stylesheet_link_tag    'calendar', media: 'all' %>
<% end %>
<% content_for :js do %>
<%= javascript_include_tag 'calendar' %>
<script>
  $('#calendar').fullCalendar({
    header: {
      left: 'prev,today,next, month,listWeek',
      center: 'title',
      right: 'month,agendaWeek,agendaDay,listWeek'

    },
    eventSources: {

    events: <%= @activities.html_safe %>,
    color: "#A40008"
    },
    timeFormat: 'H(:mm)'
  });
</script>
<% end %>
<!-- 记得这里是span不能换行 -->
<div class="breadcrumb container">
    <span><%= link_to 'Home', root_url %></span><span><%= link_to 'News & Events', events_url %></span><span>Event Calendar</span>
  </div>


<!-- title -->
<h1 class="container">Event Calendar</h1>

<div class="container">
  <div id="calendar"></div>
</div>
